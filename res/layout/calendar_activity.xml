<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p="http://schemas.android.com/apk/res/com.example.android.photoalbum"        
    android:id="@+id/calendar_awesome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:background="@drawable/calendar_full_final_2"
>
       <RelativeLayout
		    android:layout_width="490sp"
		    android:layout_height="fill_parent"
		   >
       <TextView
           android:id="@+id/event_name"
           android:layout_marginTop="10sp"
           android:layout_marginLeft="120sp"
           android:layout_marginRight="75sp"
           android:layout_width="fill_parent"
           android:layout_height="40sp"
           >
       </TextView>
       <ImageView android:id="@+id/event_image"
           android:layout_marginLeft="105sp"
           android:layout_marginTop="75sp"
           android:layout_width="fill_parent"
           android:layout_height="250sp"
           android:scaleType="fitXY"
       >
	   </ImageView>
	   
       <TextView
           android:id="@+id/event_desc"
           android:layout_marginLeft="180sp"
           android:layout_marginTop="20sp"
           android:layout_marginRight="40sp"
           android:scrollbars="vertical"
           android:layout_below="@+id/event_image"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:maxHeight="150sp"
         >             
       </TextView>
	    
	   </RelativeLayout>
       <RelativeLayout
		    android:layout_width="500sp"
		    android:layout_height="fill_parent"
		    android:layout_marginLeft="500sp"
		   >
       <ListView android:layout_marginTop="60sp"
           android:id="@+id/event_list"
           android:layout_width="270sp"
           android:layout_marginLeft="20sp"
           android:layout_height="130sp"
        ></ListView>
       <TextView
           android:id="@+id/event_timing"
           android:layout_below="@+id/event_list"
           android:layout_marginTop="27sp"
           android:layout_marginLeft="300sp"
           android:layout_width="350sp"
           android:layout_height="30sp"
         >             
       </TextView>
       <TextView
           android:id="@+id/event_tags"
           android:layout_below="@+id/event_timing"
           android:layout_marginLeft="150sp"
           android:layout_marginTop="40sp"
           android:layout_width="250sp"
           android:layout_height="30sp"
         >             
       </TextView>
       <TextView
           android:id="@+id/event_music"
           android:layout_below="@+id/event_tags"
           android:layout_marginLeft="60sp"
           android:layout_width="100sp"
           android:layout_marginTop="130sp"
           android:layout_height="60sp"
         >             
       </TextView>                     
        
       
       
		</RelativeLayout>		
    
        
</RelativeLayout>   

   
